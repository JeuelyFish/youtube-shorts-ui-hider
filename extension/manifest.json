{
  "manifest_version": 3,
  "name": "YouTube Shorts UI Hider",
  "version": "1.1",
  "description": "Hides certain elements on YouTube Shorts",
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "shorts-ui-hider-48.png",
    "128": "shorts-ui-hider-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "yt-shorts-ui-hider@jeuelyfish.com"
    }
  }
}
